<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E88E5"
    tools:context=".MenuPrincipalFragment">

    <Button
        android:id="@+id/buttonPacientes"
        android:layout_width="175dp"
        android:layout_height="190dp"
        android:layout_marginStart="@dimen/margem_ecran"
        android:layout_marginLeft="@dimen/margem_ecran"
        android:layout_marginTop="52dp"
        android:drawableTop="@drawable/patient"
        android:scaleType="fitEnd"
        android:text="Pacientes"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/buttonInfetados"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#AAAAAA"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/buttonInfetados"
        android:layout_width="175dp"
        android:layout_height="190dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="@dimen/margem_ecran"
        android:layout_marginRight="@dimen/margem_ecran"
        android:drawableTop="@drawable/covid"
        android:scaleType="fitEnd"
        android:text="Infetados"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#AAAAAA"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/buttonVacinados"
        android:layout_width="175dp"
        android:layout_height="190dp"
        android:layout_marginTop="16dp"
        android:drawableTop="@drawable/vacina"
        android:scaleType="fitEnd"
        android:text="Vacinados"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonInfetados"
        app:strokeColor="#AAAAAA"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>