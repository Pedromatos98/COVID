            app:destination="@id/NovoPacienteFragment" />
    </fragment>
    <fragment
        android:id="@+id/NovoPacienteFragment"
        android:name="com.example.covid.NovoPacienteFragment"
        android:label="@string/novo_paciente_fragment_label"
